$('.answers-errors').html('<%= render 'shared/errors', resource: @answer %>');
<% if !@answer.errors.present? %>
  $('.answers').html('<%= j render @question.answers %>')
<% end %>

var rows = $(".answers tr").not(".best").get();

rows.sort(function(a, b) {
    var aId = $(a).data("answer-id");
    var bId = $(b).data("answer-id");

    return bId - aId;
});

$.each(rows, function(index, row) {
    $(".answers").append(row);
});
